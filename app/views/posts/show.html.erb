<html>
<head>
	<title>LazeTravel</title>
  <script src = "https://cdn.rawgit.com/nnattawat/flip/v1.0.19/dist/jquery.flip.min.js"></script>
  <link href='https://fonts.googleapis.com/css?family=Mrs+Sheppards' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="app/assets/stylesheets/show.css">
  <script src="app/assets/javascripts/show.js"></script>
</head>
<body>

  <div class = "profile">
      <%= image_tag @user.avatar.url(:medium) %>
  </div>
  <div class = "firstname">
      <b> <%= @user.first_name %> </b>
  </div>

  <h2> LazeTravel </h2>

  <nav id="navigation" class="clearfix">
    <ul>
      <!-- <li><a href="/posts">Home</a></li> -->
      <li><%= link_to "Home",  posts_path %></li>
      <li><%= link_to "New Post", new_post_path %></li>
      <li><%= link_to 'Discover', post_path %></li>
      <li><%= link_to "My Post", user_path(@user.id) %></li>
    </ul>
  </nav>
  <div class="clear"></div>

   <h1> Discover </h1>

  <div class="posts">
    <% @post.each do |post| %>
    <div class="pleasefloat">
	     <%= image_tag(post.image.url(:medium)) %>
  <div class="clear"></div>
    <%= @user_location.address %>
    <br>
   Caption: <%= post.content %>
  </div>
    <% end %>
  </div>
  <div class="clear"></div>

</body>
</html>
